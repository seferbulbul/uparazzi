@model ajanda
@{
    ViewBag.Title = "AddEvent";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{danisman u = Session["User"] as danisman; }

<div class="container-fluid">
    <!-- Title -->
    <div class="row heading-bg">
        <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
            <h5 class="txt-dark">Etkinlik Ekle </h5>
        </div>
        <!-- Breadcrumb -->
        <!-- /Breadcrumb -->
    </div>
    <!-- /Title -->
    <!-- Row -->
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default card-view">
                <div class="panel-heading">
                    <div class="pull-left">
                        <h6 class="panel-title txt-dark">ETKİNLİK BİLGİLERİ</h6>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <h6 style="color:red;font-weight:bold">@ViewBag.Mesaj</h6>
                <div class="panel-wrapper collapse in">
                    <div class="panel-body">
                        <form action="/Home/AddEvent" method="post">

                            <div class="row">

                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label> Etkinlik Tarihi</label>
                                        @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control", type = "date", required = "required" })
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label> Etkinlik Saati </label>
                                        <div class='input-group date' id='datetimepicker2'>
                                            <input type='text' class="form-control" name="Saat" value="13:00" required />
                                            <span class="input-group-addon">
                                                <span class="fa fa-clock-o"></span>
                                            </span>
                                        </div>
                                       
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label> Etkinlik Başlığı</label>
                                        @Html.TextBoxFor(x => x.Title, new { @class = "form-control", required = "required" })
                                    </div>
                                </div>


                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label> Etkinlik Açıklaması</label>
                                        @Html.TextAreaFor(x => x.Text, new { rows = "4", @class = "form-control", required = "required" })
                                    </div>
                                </div>
                                @if (u.Admin == true)
                                {
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label> Kimler İçin </label> 
                                            <br />
                                            <div class="row">
                                                <div class="col-md-2">
                                                    <input type="checkbox" name=Kime value="Uzman" />     Uzmanlar
                                                </div>
                                                <div class="col-md-2">
                                                    <input type="checkbox" name=Kime value="Broker" />    <label> Brokerlar </label>
                                                </div>
                                                <div class="col-md-2">
                                                    <input type="checkbox" name=Kime value="Mudur" />    <label> Ofis Müdürleri </label>
                                                </div>
                                                <div class="col-md-2">
                                                    <input type="checkbox" name=Kime value="Asistan" />    <label> Ofis Asistanları </label>
                                                </div>
                                                <div class="col-md-2">
                                                    <input type="checkbox" name=Kime value="Yonetim" />    <label> Yönetim </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }



                                <div class="col-md-3">
                                    <div class="form-group">
                                        <button class="btn btn-info btn-rounded btn-block btn-anim"><i class="fa fa-send"></i><span class="btn-text">KAYDET</span></button>
                                    </div>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /Row -->
</div>

<script src="/AdminTheme/doodle-demo/full-width-light/dist/js/form-picker-data.js"></script>
