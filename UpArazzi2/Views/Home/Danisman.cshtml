                                            <i class="fi flaticon-24-hours"></i>
                                            <span class="text"><a href="tel:908502272779"> 08502272779</a></span>
                                        </div>
                                        @{ string tel = (Model.Danisman.Telefon.Substring(0, 1) == "0" ? "+9" : "+90") + Model.Danisman.Telefon; }

