                                                                            <div class="input-group">
                                                                                <div class="input-group-addon"><i class="icon-lock"></i></div>
                                                                                <input name="pwd" type="password" class="form-control" id="exampleInputpwd_1" placeholder="Yeni Şifre Giriniz" value="">
