@model danisman
@{
    ViewBag.Title = "DanismanEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


    <div class="container-fluid">
        <!-- Title -->
        <div class="row heading-bg">
            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                <h5 class="txt-dark">Uzman Ekle </h5>
            </div>
            <!-- Breadcrumb -->
            <!-- /Breadcrumb -->
        </div>
        <!-- /Title -->
        <!-- Row -->
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default card-view">
                    <div class="panel-heading">
                        <div class="pull-left">
                            <h6 class="panel-title txt-dark">DANIŞMAN BİLGİLERİ</h6>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <h6 style="color:red">@ViewBag.Mesaj</h6>
                    <div class="panel-wrapper collapse in">
                        <div class="panel-body">
                            <form action="/Broker/DanismanEkle" method="post" enctype="multipart/form-data">

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label> Adı Soyadı</label>
                                            @Html.TextBoxFor(x => x.Ad, new { @class = "form-control", required = "required" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label> Mail Adresi</label>
                                            @Html.TextBoxFor(x => x.Email, new { type="email", @class = "form-control", placeholder = "...@uparazzi.com.tr", required = "required" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label> Gsm Numarası</label>
                                            @Html.TextBoxFor(x => x.Telefon, new { @class = "form-control", placeholder = "535xxxxxxx", required = "required",pattern="[0-9]{10,11}", title="Örnek : 535xxxxxxx veya 0535xxxxxxx" })
                                        </div>
                                    </div>
                                   

                                  
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label> Vergi Dairesi Telefon Numarası</label>
                                            @Html.TextBoxFor(x => x.VergiDairesi, new { @class = "form-control", placeholder = "2163xxxxxx" ,pattern="[0-9]{10,11}", title="Örnek : 535xxxxxxx veya 0535xxxxxxx"})
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label> Doğum Tarihi</label>
                                            @Html.TextBoxFor(x => x.BirthDay, new { @class = "form-control", type = "date", required = "required" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label> Bölgesi</label>
                                            @Html.TextBoxFor(x => x.Bolge, new { @class = "form-control", placeholder = "Örn : Çanakkale Bölgesi", required = "required" })
                                        </div>
                                    </div>

                                   
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label> Uzman Profil Resmi</label>
                                            <input type="file" name="profil" class="form-control" required />
                                        </div>
                                    </div>
                                   
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label> MYK Belgesi</label>
                                            <input type="file" name="myk" class="form-control"  />
                                        </div>
                                    </div>
                                   
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label> Özgeçmişi</label>
                                            @Html.TextAreaFor(x => x.Ozgecmis, new { rows = "3", @class = "form-control", required = "required" })
                                        </div>
                                    </div>

                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <button class="btn btn-danger btn-rounded btn-block btn-anim"><i class="fa fa-send"></i><span class="btn-text">KAYDET</span></button>
                                        </div>
                                    </div>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /Row -->
    </div>